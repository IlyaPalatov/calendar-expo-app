{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",                 
    "module": "esnext",                  
    "jsx": "react-native",                
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
